# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=database_name
POSTGRES_PORT=5432

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=change-this-to-a-long-random-string-minimum-32-characters

# Storage Configuration
STORAGE_SALT=change-this-to-a-random-salt-for-hashing-filenames

# Encryption Configuration (for API keys)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-string-here

# Admin Configuration
ADMIN_KEY=your-admin-secret-key-for-creating-invites
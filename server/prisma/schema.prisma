generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Home {
  id                String @id @default(uuid())
  name              String?
  home_img_key      String?
  location          Json?
  widget_positions  Json?  
  widget_config     Json?
  users             User[]
}

model User {
  id             String @id @default(uuid())
  name           String?
  email          String @unique
  avatar_img_key String?
  status         String
  created_at     DateTime
  login_tokens   LoginTokens[]
  home_id        String?
  home           Home? @relation(fields: [home_id], references: [id])
}

model LoginTokens {
  id             String @id @default(uuid())
  user_id        String  
  user           User @relation(fields: [user_id], references: [id]) 
  token_hash     String @unique 
  purpose        String 
  expires_at     DateTime
  used_at        DateTime?
  created_at     DateTime 
}

model Session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], name: "IDX_session_expire")
  @@map("sessions")
}

